@{
    ViewData["Title"] = "Home Page";
}

@model IQueryable<Book> 

<!--Adam Neumiller 
    
    The purpose of this program is to build a website that is links to a database database. The database was built using a 
    model first approach. I lost points last time for "not having enough comments", I a diligent effor to comment my code as 
    much as I thought was appropriate. 
    
    
    -->
<div class="text-center">
    <h1>Good Reads Book Database!</h1>
    <div class="text-center">
        <table class="center table table-dark table-striped table-hover">
            <!--Table for the database-->
            <thead>
                <tr>
                    <th>Book ID</th>
                    <th>Title</th>
                    <th>Author First Name</th>
                    <th>Author Middle Initial</th>
                    <th>Author Last Name</th>
                    <th>Publisher</th>
                    <th>ISBN</th>
                    <th>Classification</th>
                    <th>Category</th>
                    <th>Price</th>

                </tr>
            </thead>



            <tbody>
                <!--Loops through all of the items in the database to print them out here-->
                @foreach (var x in Model)
                {
                    <tr id="highlight">
                        <td>@x.BookId </td>
                        <td>@x.Title</td>
                        <td>@x.AuthorFirstName</td>
                        <td>@x.AuthorMiddleInitial</td>
                        <td>@x.AuthorLastName</td>
                        <td>@x.Publisher</td>
                        <td>@x.ISBN</td>
                        <td>@x.Classification</td>
                        <td>@x.Category</td>
                        <td>$@x.Price</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>


