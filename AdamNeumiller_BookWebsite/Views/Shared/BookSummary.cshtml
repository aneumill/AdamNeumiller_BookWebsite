@{

}


@model Book

<!--Partial view for the Index.html-->

<tr class="table-hover">
    <td>@Model.BookId </td>
    <td>@Model.Title</td>
    <td><img src="@Model.BookPicURL" alt="No Image" style="width:100px"/></td>
    <td>@Model.AuthorFirstName</td>
    <td>@Model.AuthorMiddleInitial</td>
    <td>@Model.AuthorLastName</td>
    <td>@Model.Publisher</td>
    <td>@Model.ISBN</td>
    <td>@Model.Classification</td>
    <td>@Model.Category</td>
    <td>$@Model.Price</td>
    <td>@Model.PageNumber</td>
    <td>
    <form id="@Model.BookId" asp-page="/BookPurchase" method="post">

        <input type="hidden" asp-for="BookId"/> 
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()" />
        <span class="card-text p1">
            <button type="submit" class=" btn btn-success btn-sm text-center text-md-center">Add to Cart</button>
            
        </span>
        
     </form>
    </td>
</tr>